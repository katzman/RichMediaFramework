package com.richMedia.baseclasses.dc{	import flash.display.MovieClip;	import flash.events.Event;	import com.google.ads.studio.ProxyEnabler;		import com.richMedia.managers.doubleclick.DCTrackingManager;	import com.richMedia.managers.MouseEventManager;    public class General_Base extends MovieClip    {		protected var enabler:ProxyEnabler = ProxyEnabler.getInstance();		protected var mouseManager:MouseEventManager;		protected function setMouseEvents():void 		{			mouseManager = new MouseEventManager( this );		}		protected function registerButton( instance:String, clickHandler:Function, overHandler:Function=null, outHandler:Function=null, exitID:String=null, closeOnExit:Boolean = true ):void		{			if(exitID) DCTrackingManager.addExit( instance,exitID, closeOnExit );			mouseManager.addButton( instance, clickHandler, overHandler, outHandler );		}	    protected function registerButtons( instances:Array, clickHandler:Function, overHandler:Function=null, outHandler:Function=null, exitID:String=null, closeOnExit:Boolean = true ):void	    {		    var length:uint = instances.length;		    var instance:String;		    if( exitID )		    {			    for( var i:uint = 0; i < length; i++ )			    {				    instance = instances[i];				    registerButton( instance, clickHandler, overHandler, outHandler, exitID, closeOnExit );			    }		    }	    }				public function General_Base() 		{			if( stage ) init();			else addEventListener( Event.ADDED_TO_STAGE, init ); 								  										}				protected function init( e:Event = null ):void 		{			addEventListener( Event.REMOVED_FROM_STAGE, destroy );			setMouseEvents();		}				protected function destroy( e:Event = null ):void 		{			removeEventListener( Event.REMOVED_FROM_STAGE, destroy );							if( mouseManager ) mouseManager.destroy();			mouseManager = null;						enabler = null;		}	}}