package com.richMedia.baseclasses.dc.expanding{		import flash.display.DisplayObject;	import flash.events.Event;	import com.google.ads.studio.events.StudioEvent;	import com.google.ads.studio.utils.StudioClassAccessor;	import com.richMedia.baseclasses.dc.General_Base;    public class Collapsed_Base extends General_Base    {	    protected var expanding:Object = StudioClassAccessor.getClass(StudioClassAccessor.CLASS_EXPANDING)["getInstance"]();				override protected function setMouseEvents():void 		{			super.setMouseEvents();		}		protected function expandSelected( btn:DisplayObject ):void 		{			gotoAndPlay( 'hide' );		}				protected function showCollapsed( e:StudioEvent ):void 		{			gotoAndPlay( 'show' );		}				public function Collapsed_Base() 		{			super();								  										}				override protected function init( e:Event = null ):void 		{			super.init();			expanding.addEventListener( StudioEvent.COLLAPSE_COMPLETE, showCollapsed );			if( DCData.IS_AUTO_PANEL ) gotoAndStop( 1 );		}		override protected function destroy( e:Event = null ):void 		{			if( expanding ) expanding.removEventListener( StudioEvent.COLLAPSE_COMPLETE, showCollapsed );			expanding = null;						super.destroy();		}	}}